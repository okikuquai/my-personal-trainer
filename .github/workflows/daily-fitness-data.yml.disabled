name: Daily Fitness Data Collection

on:
  schedule:
    # æ¯Žæ—¥åˆå‰1æ™‚ï¼ˆJSTï¼‰ã«å®Ÿè¡Œï¼ˆUTC 16:00ï¼‰
    - cron: '0 16 * * *'
  workflow_dispatch: # æ‰‹å‹•å®Ÿè¡Œã‚‚å¯èƒ½

jobs:
  collect-fitness-data:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
      with:
        token: ${{ secrets.GITHUB_TOKEN }}
        fetch-depth: 0
    
    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'
    
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install requests python-dateutil
    
    - name: Set up Git configuration
      run: |
        git config --global user.name "fitness-tracker-bot"
        git config --global user.email "action@github.com"
    
    - name: Fetch activity data
      env:
        GOOGLE_OAUTH_CLIENT_ID: ${{ secrets.GOOGLE_OAUTH_CLIENT_ID }}
        GOOGLE_OAUTH_CLIENT_SECRET: ${{ secrets.GOOGLE_OAUTH_CLIENT_SECRET }}
        GOOGLE_REFRESH_TOKEN: ${{ secrets.GOOGLE_REFRESH_TOKEN }}
      run: |
        python scripts/fetch_activity.py
    
    - name: Fetch weight data
      env:
        GOOGLE_OAUTH_CLIENT_ID: ${{ secrets.GOOGLE_OAUTH_CLIENT_ID }}
        GOOGLE_OAUTH_CLIENT_SECRET: ${{ secrets.GOOGLE_OAUTH_CLIENT_SECRET }}
        GOOGLE_REFRESH_TOKEN: ${{ secrets.GOOGLE_REFRESH_TOKEN }}
      run: |
        python scripts/fetch_weight.py
    
    - name: Check for changes
      id: check_changes
      run: |
        if [ -n "$(git status --porcelain)" ]; then
          echo "changes=true" >> $GITHUB_OUTPUT
        else
          echo "changes=false" >> $GITHUB_OUTPUT
        fi
    
    - name: Commit and push changes
      if: steps.check_changes.outputs.changes == 'true'
      run: |
        git add activity/ weight/
        git commit -m "ðŸƒâ€â™‚ï¸ Daily fitness data update for $(date +%Y-%m-%d)"
        git push
    
    - name: Create summary
      if: always()
      run: |
        echo "## ðŸ“Š Daily Fitness Data Collection Summary" >> $GITHUB_STEP_SUMMARY
        echo "" >> $GITHUB_STEP_SUMMARY
        echo "**Date**: $(date +%Y-%m-%d)" >> $GITHUB_STEP_SUMMARY
        echo "**Status**: ${{ job.status }}" >> $GITHUB_STEP_SUMMARY
        echo "" >> $GITHUB_STEP_SUMMARY
        
        if [ "${{ steps.check_changes.outputs.changes }}" == "true" ]; then
          echo "âœ… New fitness data has been collected and saved!" >> $GITHUB_STEP_SUMMARY
        else
          echo "â„¹ï¸ No new fitness data to update." >> $GITHUB_STEP_SUMMARY 
